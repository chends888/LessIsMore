variable = variable_type variable_name "is" variable_data
variable_type = "string" | "integer"

conditional if = "if" test "then" expr "end_if"
while_loop = "while" test "is true then" expr "end_loop"

test = or_test
or_test = and_test ("or" and_test)
and_test = not_test ("and" not_test)
not_test = "not" not_test | comparison

comparison = expr (comp_op expr)
comp_op = "is greater than" | "is less than" | "is equal to"
expr = and_expr ("or" and_expr)
and_expr = arith_expr ("and" arith_expr)
arith_expr = term (("plus" | "minus") term)
term = factor (("times" | "divide by") factor)
factor = ("+" | "-" | "not") factor | variable

function_def = "function" function_name parameters "is" expr "end_func"

annassign = test ["=" test]